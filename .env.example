# Database Configuration
DB_HOST=localhost
DB_NAME=gatherly
DB_USER=root
DB_PASS=

# SendGrid Configuration (Primary Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@gatherly.com
SENDGRID_FROM_NAME=Gatherly

# SMTP Configuration (Backup Email Service - PHPMailer)
# Examples: Gmail, Outlook, or your own SMTP server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_SECURE=tls
SMTP_FROM_EMAIL=noreply@gatherly.com
SMTP_FROM_NAME=Gatherly

# Application Settings
APP_URL=http://localhost/gatherly
APP_ENV=development

# Security
SESSION_LIFETIME=7200
HASH_COST=10

